<section id='edit'>
    <article>
        <h2>Edit Recipe</h2>
        <form action='/recipes/edit/{{recipe._id}}' method='post'>
            <label>Name:
                <input
                    type='text'
                    name='name'
                    placeholder='Recipe name'
                    value='{{recipe.name}}'
                /></label>
            <label>Image:
                <input
                    type='text'
                    name='img'
                    placeholder='Image URL'
                    value='{{recipe.imageUrl}}'
                /></label>
            <label class='ml'>Ingredients:
                <textarea
                    name='ingredients'
                    placeholder='Enter ingredients on separate lines'
                    value=''
                >{{recipe.ingredients}}</textarea>
            </label>
            <label class='ml'>Preparation:
                <textarea
                    name='steps'
                    placeholder='Enter preparation steps on separate lines'
                    value=''
                >{{recipe.steps}}</textarea>
            </label>
            <input type='submit' value='Update Recipe' />
        </form>
    </article>
</section>