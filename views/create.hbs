<section id='create'>
    {{#if errors}}
        {{#each errors}}
            <div id='notifications'>
                <p id='notification-message'>{{msg}}</p>
            </div>
        {{/each}}
    {{/if}}
    <article>
        <h2>New Recipe</h2>
        <form action='/recipes/create' method='post'>
            <label>Name:
                <input
                    type='text'
                    name='name'
                    placeholder='Recipe name'
                    value='{{data.name}}'
                /></label>
            <label>Image:
                <input
                    type='text'
                    name='img'
                    placeholder='Image URL'
                    value='{{data.img}}'
                /></label>
            <label class='ml'>Ingredients:
                <textarea
                    name='ingredients'
                    placeholder='Enter ingredients on separate lines'
                >{{data.ingredients}}</textarea>
            </label>
            <label class='ml'>Preparation:
                <textarea
                    name='steps'
                    placeholder='Enter preparation steps on separate lines'
                >{{data.steps}}</textarea>
            </label>
            <input type='submit' value='Create Recipe' />
        </form>
    </article>
</section>