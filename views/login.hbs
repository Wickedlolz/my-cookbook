<section id='login'>
    {{#if errors}}
        {{#each errors}}
            <div id='notifications'>
                <p id='notification-message'>{{msg}}</p>
            </div>
        {{/each}}
    {{/if}}
    <article>
        <h2>Login</h2>
        <form method='post'>
            <label>E-mail:
                <input
                    type='text'
                    name='email'
                    value='{{data.email}}'
                /></label>
            <label>Password: <input type='password' name='password' /></label>
            <input type='submit' value='Login' />
        </form>
    </article>
</section>